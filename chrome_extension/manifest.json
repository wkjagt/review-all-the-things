{
  "manifest_version": 2,

  "name": "Code review reminder",
  "description": "Code review reminder",
  "version": "0.0.1",
  "options_page" : "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery-2.1.3.min.js",
      "background.js"
    ]
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : [
        "jquery-2.1.3.min.js",
        "contentscript.js",
        "jquery.timeago.js"
      ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "permissions": [ "activeTab", "https://ajax.googleapis.com/" ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
